extends layout

block style 
    style. 
        .center-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .center-container h3 {
            font-size: 2rem;
            font-weight: 500;
        }

        .center-container a {
            text-decoration: none;
            color: white;
            padding: 5px;
            border-radius: 30px;
            background: #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.2rem;
            width: 50%;
            margin: auto;
            margin-top: 10px;
        }

        .center-container span {
            width: 80%;
        }

        .center-container i {
            font-size: 2rem;
        }

block content
    .home-section
        .center-container 
            h3.message You need to login to use this feature 
            a.sign-in-with-github(href="/auth/github") 
                i.bx.bxl-github 
                span Sign in with Github